{
    "name": "alaaelgndy/file-uploader",
    "description": "This is a file file-uploader manager",
    "authors": [
        {
            "name": "alaaelgndy",
            "email": "alaaelgndy21@gmail.com"
        }
    ],
    "minimum-stability": "dev",

    "require": {
        "php": "^7.2",
    	"intervention/image": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
    },
    "autoload": {
        "psr-4": {
            "Elgndy\\FileUploader\\": "packages/FileUploader/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elgndy\\FileUploader\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Elgndy\\FileUploader\\FileUploaderServiceProvider"
            ]
        }
    }
}
